            <div class="col">
                <button class="btn btn-primary" onclick="window.location = '/addProduct';" >Add Product</button>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <input type="text" class="form-control" placeholder="New Product" id="search">
